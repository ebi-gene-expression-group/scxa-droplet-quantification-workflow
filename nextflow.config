process {
    executor='lsf'
    queue='production-rh74'
    clusterOptions = '-R \"select[hname!=\'hx-noah-05-02\']\"'
}

executor {
    queueSize=500
    perJobMemLimit=true
    exitReadTimeout='100000 sec'
    pollInterval = '5sec'
}

conda {
    cacheDir = "$SCXA_WORKFLOW_ROOT/envs"
    createTimeout = "30 min"
}

params {
    
    downloadMethod = 'wget'
    maxConcurrentDownloads = 20
    minMappingRate = 40
    
    '10xv2' {
        alevinType = 'chromium'
        barcodeLength = 16
        umiLength = 10
        end = '5'
    }

    'drop-seq' {
        alevinType = 'dropseq'
        barcodeLength = 12
        umiLength = 8
        end = '5'
    }

    '10xv3' {
        alevinType = 'chromiumV3'
        barcodeLength = 16
        umiLength = 12
        end = '5'
    }

    salmon {
        libType = 'ISR'
        index {
            kmerSize = 31
        }
    }

}
